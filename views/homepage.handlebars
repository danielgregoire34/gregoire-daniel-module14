<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div id="box"class="row mb-4 blog">
  <div class="container"style="width:50%" >
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a class="row"id="title"href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col">
    <p>
      {{blog.description}}
    </p>
  </div>
</div>
{{/each}}

<style>
  #box {
  background-color: coral;
    border: 5px solid white;
}
#title{
  background-color: teal;
  width: 100%;
  padding-left: 100px;
  padding-right: 100px;
}
</style>
